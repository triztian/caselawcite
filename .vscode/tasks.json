{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Create Database (Case and Attorney)",
			"type": "shell",
			"problemMatcher": [],
			"dependsOn": [
				"Create Database Tables",
				"Create Attorneys Database",
				"Create Cases Database",
			]
		},
		{
			"label": "Create Database Tables",
			"type": "shell",
			"command": [
				"python3",
				"${workspaceFolder}/ETL/hcapetl.py", 
				"create", "tables",
				"${workspaceFolder}/hcap.sqlite",
				"${workspaceFolder}/Database/attorneys.ddl.sql",
				"${workspaceFolder}/Database/cases.ddl.sql"
			],
			"problemMatcher": []
		},
		{
			"label": "Create Attorneys Database",
			"type": "shell",
			"command": [
				"python3",
				"${workspaceFolder}/ETL/hcapetl.py", 
				"create", "attorneys",
				"${workspaceFolder}/hcap.sqlite",
				"${workspaceFolder}/Data/Processed/data.json"
			],
			"problemMatcher": []
		},
		{
			"label": "Create Cases Database",
			"type": "shell",
			"command": [
				"python3",
				"${workspaceFolder}/ETL/do_create_cases.py",
				"-s","${workspaceFolder}/hcap.sqlite",
				"-t", "${workspaceFolder}/Database/cases.ddl.sql",
				"${workspaceFolder}/Data/Processed/data.json"
			],
			"problemMatcher": []
		},
		{
			"label": "Create Citations Table",
			"type": "shell",
			"command": [
				"python3",
				"${workspaceFolder}/ETL/do_create_cases.py",
				"-s","${workspaceFolder}/hcap.sqlite",
				"-t", "${workspaceFolder}/Database/cases.ddl.sql",
				"--citations",
				"${workspaceFolder}/Data/Illinois-20200302-text/data/citations.csv"
			],
			"problemMatcher": []
		},
		{
			"label": "Delete Database",
			"type": "shell",
			"command": "rm -fv ${workspaceFolder}/hcap.sqlite",
			"problemMatcher": []
		}
	]
}